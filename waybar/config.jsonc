{
  "layer": "top", // Waybar at top layer
  "exclusive": true,
  "output": ["DP-1", "eDP-1"],
  "height": 35, // Waybar height (to be removed for auto height)
  "spacing": 4, // Gaps between modules (4px)

  "modules-left": [
    "hyprland/workspaces",
  ],
  "modules-center": ["clock","custom/weather"],
  "modules-right": [
    "pulseaudio",
    "backlight",
    "network",
    "power-profiles-daemon",
    "cpu",
    "memory",
    "tray",
    "custom/power"
  ],

  "custom/weather": {
      "exec": "~/.config/waybar/scripts/weather_extract.sh",
      "interval": 600,
      "format": "{}",
      "tooltip": false,
      "on-click": "kitty --class floatweather sh -c \"cat ~/.config/waybar/scripts/forecast_output; read -n 1\""
  },  

  "hyprland/workspaces": {
    "show-special": true,
        "persistent-workspaces": {
            "*":[1,2,3,4,5]
        },
        "format": "{icon}",
        "format-icons": {
            "active": "<span color='#89b4fa'>ÔÑë</span>",
            "empty": "<span color='#74c7ec'>Ôí™</span>",
            "default": "<span color='#89dceb'>ÔÜí</span>",
            "urgent": "ÔÅ™",
            "special": "<span color='plum'>Û∞†±</span>"
        }

    // "disable-scroll": true,
    // "all-outputs": true,
    // "warp-on-scroll": false,
    // "format": "{name}: {icon}",
    // "format-icons": {
      // "urgent": "ÔÅ™",
      // "active": "ÔÜí",
      // "default": "ÔÑë"
      // //"1": "ÔÑ†",
      // //"2": "Ôâ®",
      // //"3": "ÔÑ°",
      // //"4": "ÔÜº",
      // //"5": "ÔÅµ",
    // }
  },
  "clock": {
    "locale": "pt_BR.UTF-8",
    "format": "{:%H:%M} ÔÄó ",
    "format-alt": "{:L%A, %d-%m - %H:%M} ÔÄó ",
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "mode": "month",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "cpu": {
    "format": "{usage}% Ôãõ  ÓÇ≥",
    "on-click": "kitty --class floatterm btop"
  },
  "memory": {
    "format": "{used:0.1f}G ÔÉâ  ÓÇ≥"
    //"format": "{used:0.1f}G/{total:0.1f}G ÔÉâ"
  },
  "temperature": {
    "critical-threshold": 80,
    "format": "{temperatureC}¬∞C {icon}",
    "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
  },
  "backlight": {
    "format": "{percent}% {icon}  ÓÇ≥",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
    "scroll-step": 0.5
    //"format-icons": ["Ôî¢"]
  },
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% Ôóß",
    "format-plugged": "{capacity}% Ôá¶",
    "format-alt": "{time} {icon}",
